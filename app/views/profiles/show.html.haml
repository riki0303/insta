.container.container--mt
  .head
    .head__item
      = link_to :back do
        %span.arrow-left
    .head__item
      %p.profile__name
        = @profile.name
      %p.profile__account
        (#{current_user.account})
    .head__item.head__item--right
      = link_to 'Logout', destroy_user_session_path

  .profile__my-image-container
    - if @profile&.avatar&.attached?
      = image_tag @profile.avatar, class: 'profile__my-image'
    - else
      = image_tag 'default-avatar.png'
    %div
      = link_to 'edit?', edit_profile_path, class: 'profile__link'

  .profile__parameter-container
    .profile__parameter
      .profile__parameter-number 44
      %p.profile__parameter-name Posts
    .profile__parameter
      .profile__parameter-number 110
      %p.profile__parameter-name Followers
    .profile__parameter
      .profile__parameter-number 44
      %p.profile__parameter-name Following

  .profile__post-container
    = image_tag 'post-1.png' , class: 'profile__post'
    = image_tag 'post-2.png' , class: 'profile__post'
    = image_tag 'post-3.png' , class: 'profile__post'
