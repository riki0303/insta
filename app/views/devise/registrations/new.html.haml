.form
  .form__image-container
    = image_tag 'login.png', class: 'form__image'
  .container 
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field.form__item
        = f.label :account,class: 'form__item-name'
        %br/
        = f.text_field :account, autofocus: true, autocomplete: "account", class: 'form__input'
      .field.form__item
        = f.label :email,class: 'form__item-name'
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form__input'
      .field.form__item
        = f.label :password,class: 'form__item-name'
        %br/
        = f.password_field :password, autocomplete: "new-password", class: 'form__input'
      .actions.form__btn
        = f.submit "CREATE ACCOUNT", class: 'form__btn-text'
